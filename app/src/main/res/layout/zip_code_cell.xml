<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

  <TextView
      android:id="@+id/text_view_ward_name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:maxLines="1"
      android:padding="8dp"
      android:singleLine="true"
      android:textColor="@color/text_black"
      android:textSize="20sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_chainStyle="packed" />

  <TextView
      android:id="@+id/text_view_street_name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:maxLines="1"
      android:padding="8dp"
      android:singleLine="true"
      android:textColor="@color/text_black"
      android:textSize="20sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/text_view_ward_name"
      app:layout_constraintVertical_chainStyle="packed" />

  <TextView
      android:id="@+id/text_view_zip_code"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:maxLines="1"
      android:padding="8dp"
      android:singleLine="true"
      android:gravity="end"
      android:textColor="@color/text_black"
      android:textSize="20sp"
      app:layout_constraintTop_toBottomOf="@id/text_view_street_name"/>


</androidx.constraintlayout.widget.ConstraintLayout>